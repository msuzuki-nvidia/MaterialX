    <output name="flakenormal" type="vector3" />
  </flake3d>
  <standard_surface name="SR_flake3d" type="surfaceshader">
    <input name="base" type="float" value="1" />
    <input name="base_color" type="color3" value="0.1, 0.1, 0.5" />
    <input name="normal" type="vector3" output="flakenormal" nodename="flake3d" />
    <input name="metalness" type="float" value="1" />
    <input name="specular_roughness" type="float" value="0.1" />
  </standard_surface>
  <surfacematerial name="test_flake3d" type="material">
    <input name="surfaceshader" type="surfaceshader" nodename="SR_flake3d" />
  </surfacematerial>
</materialx>